mixin pageHeader(tituloTema, srcImagen, pagina)

    .curso-portada

        .row.align-items-center

            .col-12.col-lg-6

                h3#curso-titulo-componente.curso-subtitulo ÉTICA Y CULTURA DE PAZ
                h1#curso-titulo-tema.curso-titulo Entendiendo mi Mundo

                .brand-line-primary

                if pagina == 'main'

                    .keywords
                        span.badge.badge-pill.badge-light.mr-2 #Sustentabilidad ética 
                        span.badge.badge-pill.badge-light.mr-2 #Marca ética
                        span.badge.badge-pill.badge-light.mr-2 #Triple bottom line

                    .barra-dots.mt-5
                        img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                else 
                    p.curso-descripcion Estimados aprendices, este componente busca que cada uno de ustedes tome conciencia de la forma como estamos habitando nuestro planeta y por consiguientes, los impactos que estamos generando como especie humana. El planeta Tierra está atravesando una grave problemática ambiental, que compromete la posibilidad de vida de las generaciones futuras, resultado de una sociedad consumista, sin conciencia del impacto que están generando las relaciones ser humano-medio ambiente y seres humanos entre sí. 
        
                if pagina == 'home'
                    a.curso-btn-iniciar.btn.btn-light(href="main.html")
                        span Iniciar curso


            .col-12.col-lg-6.text-center
                .d-none.d-lg-block
                    img(src= srcImagen).curso-imagen


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'folder'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'references'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else if numero == 'glosary'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
     
